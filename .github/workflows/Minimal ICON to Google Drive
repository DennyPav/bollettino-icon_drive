name: ICON to Google Drive

on:
  workflow_dispatch:
  schedule:
    - cron: "0 3,16 * * *"   # Alle 03:00 e alle 16:00 UTC ogni giorno

jobs:
  run-bollettino:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"

      - name: Install Python dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run script
        run: python first_guess_icon_v3git.py

      - name: Install rclone
        run: curl https://rclone.org/install.sh | sudo bash

      - name: Configure rclone and upload output to Google Drive
        env:
          SERVICE_ACCOUNT_JSON: ${{ secrets.GDRIVE_SERVICE_ACCOUNT_JSON }}
        run: |
          echo "$SERVICE_ACCOUNT_JSON" > service_account.json
          mkdir -p ~/.config/rclone
          printf "[gd]\ntype = drive\nscope = drive\nservice_account_file = service_account.json\nroot_folder_id = 19NAl2p4vEIJ7kznYaRg9ARoBpMyA4FHF\n" > ~/.config/rclone/rclone.conf
          rclone copy ./output/ gd: --drive-chunk-size 64M --verbose
